generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model processeur{
  id Int @id @default(autoincrement())
  fournisseurprocid Int
  reference String
}

model fournisseurproc{
  id Int @id @default(autoincrement())
  nom String @unique
}

model typedur{
  id Int @id @default(autoincrement())
  label String @unique
}

model marque{
  id Int @id @default(autoincrement())
  nom String @unique
}

model laptop{
  id Int @id @default(autoincrement())
  reference String
  frequence Int
  ram Int
  memoire Int
  processeurid Int
  typedurid Int
  ecran Int
  marqueid Int
  prix Int
}

model pointvente{
  id Int @id @default(autoincrement())
  label String @unique
  @@map(name: "pointdevente")
}

model utilisateur{
  id Int @id @default(autoincrement())
  nom String
  login String @unique
  password String
}

